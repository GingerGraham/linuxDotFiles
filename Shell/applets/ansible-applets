  while getopts ":p:" opt; do
    case $opt in
      p) VAULT_PASS="$OPTARG"
         echo "Pass file is ${VAULT_PASS}" >&2
      ;;
      \?) echo "[ERROR] Invalid option -$OPTARG" >&2
          return 1
      ;;
    esac
  done

  # Process arguments excluding arguments passed as options
  shift $((OPTIND -1))
