# SSH aliases
alias sshhosts="grep -E '^Host\s' ~/.ssh/config"
alias esshhosts="grep -E '^Host\s' ~/.ssh/Edge/config"
alias vsshhosts="grep -E '^Host\s' ~/.ssh/Vocera/config"
alias essh="ssh -F ~/.ssh/Edge/config"
alias vssh="ssh -F ~/.ssh/Vocera/config"
